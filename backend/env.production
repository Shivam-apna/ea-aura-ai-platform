# Production Environment Configuration
ENVIRONMENT=production
APP_NAME=EA-AURA Backend (Production)
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=8081

# Database Configuration
ELASTICSEARCH_URL=https://your-production-elasticsearch:9200
ELASTICSEARCH_USERNAME=your-elasticsearch-username
ELASTICSEARCH_PASSWORD=your-elasticsearch-password

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=your-production-kafka:9092
KAFKA_TOPIC_PREFIX=ea-aura-prod

# Vault Configuration
VAULT_ADDR=https://your-production-vault:8200
VAULT_TOKEN=your-production-vault-token

# AI/LLM Configuration
OPENAI_API_KEY=your-production-openai-api-key
GROQ_API_KEY=your-production-groq-api-key

# Logging Configuration
LOG_LEVEL=WARNING
LOG_FORMAT=json

# CORS Configuration
CORS_ORIGINS=["https://your-production-domain.com", "https://www.your-production-domain.com"]

# Security Configuration
SECRET_KEY=your-production-secret-key-change-this

# Performance Configuration
MAX_WORKERS=8
WORKER_TIMEOUT=30

# Feature Flags
ENABLE_AGENT_CHAINING=true
ENABLE_MEMORY_MANAGEMENT=true
ENABLE_TOKEN_TRACKING=true 