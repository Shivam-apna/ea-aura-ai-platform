# Staging Environment Configuration
ENVIRONMENT=staging
APP_NAME=EA-AURA Backend (Staging)
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=8081

# Database Configuration
ELASTICSEARCH_URL=http://elasticsearch:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_TOPIC_PREFIX=ea-aura-staging

# Vault Configuration
VAULT_ADDR=http://vault:8200
VAULT_TOKEN=demo

# Keycloak Configuration
KEYCLOAK_URL=https://staging.ea-aura.ai/auth
KEYCLOAK_REALM=ea_aura
KEYCLOAK_CLIENT_ID=ea_aura
KEYCLOAK_CLIENT_SECRET=
KEYCLOAK_ADMIN_USERNAME=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# AI/LLM Configuration
OPENAI_API_KEY=your-openai-api-key-here
GROQ_API_KEY=your-groq-api-key-here

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS Configuration
CORS_ORIGINS=["https://staging.ea-aura.ai", "https://ea-aura.ai"]

# Security Configuration
SECRET_KEY=staging-secret-key-change-in-production

# Performance Configuration
MAX_WORKERS=4
WORKER_TIMEOUT=60

# Feature Flags
ENABLE_AGENT_CHAINING=true
ENABLE_MEMORY_MANAGEMENT=true
ENABLE_TOKEN_TRACKING=true 
