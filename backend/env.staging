# Staging Environment Configuration
ENVIRONMENT=staging
APP_NAME=EA-AURA Backend (Staging)
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=8081

# Database Configuration
ELASTICSEARCH_URL=http://elasticsearch:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_TOPIC_PREFIX=ea-aura-staging

# Vault Configuration
VAULT_ADDR=http://vault:8200
VAULT_TOKEN=staging-vault-token

# AI/LLM Configuration
OPENAI_API_KEY=your-openai-api-key-here
GROQ_API_KEY=your-groq-api-key-here

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS Configuration (supports both HTTP and HTTPS)
CORS_ORIGINS=["http://localhost", "https://staging.ea-aura.ai", "https://staging.ea-aura.ai:443", "http://staging.ea-aura.ai"]

# Security Configuration
SECRET_KEY=staging-secret-key-change-in-production

# Performance Configuration
MAX_WORKERS=4
WORKER_TIMEOUT=120

# Feature Flags
ENABLE_AGENT_CHAINING=true
ENABLE_MEMORY_MANAGEMENT=true
ENABLE_TOKEN_TRACKING=true

# Azure-specific configurations
AZURE_STORAGE_CONNECTION_STRING=your-azure-storage-connection-string
AZURE_KEY_VAULT_URL=https://your-key-vault.vault.azure.net/
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=your-azure-tenant-id 